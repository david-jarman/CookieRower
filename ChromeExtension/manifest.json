{
	"manifest_version": 2,

	"name": "Cookie Rower",
	"description": "Play cookie clicker while rowing",
	"version": "1.0",
	
	"content_scripts": [
		{
		  "matches": ["*://orteil.dashnet.org/cookieclicker/"],
		  "js": ["cookie_clicker.js"]
		}
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "Cookie rower"
	},
	"permissions": [
		"activeTab",
		"storage"
	]
}